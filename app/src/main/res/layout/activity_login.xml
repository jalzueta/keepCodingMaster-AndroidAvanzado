<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".LoginActivity">

    <Button
        android:id="@+id/user_timeline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Timeline"
        android:enabled="false"/>

    <Button
        android:id="@+id/home_timeline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_timeline_button"
        android:layout_toEndOf="@id/user_timeline_button"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Home Timeline"
        android:enabled="false"/>

    <Button
        android:id="@+id/query_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_timeline_button"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Query search"
        android:enabled="false"/>

</RelativeLayout>
